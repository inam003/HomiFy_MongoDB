<%- include('../partials/head.ejs') %>
<body class="bg-gray-50 min-h-screen">
  <%- include('../partials/navigation.ejs') %>
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-7xl mx-auto">
      <!-- Main Content Container -->
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
        <!-- Image Gallery Section -->
        <div class="relative h-[500px]">
          <img
            src="<%= home.photo %>"
            alt="<%= home.houseName %>"
            class="w-full h-full object-cover"
          />
          <div class="absolute top-4 right-4">
            <%- include('../partials/favourite.ejs') %>
          </div>
        </div>

        <!-- Content Section -->
        <div class="p-8">
          <div
            class="flex flex-col lg:flex-row lg:justify-between lg:items-start gap-8"
          >
            <!-- Left Column -->
            <div class="flex-1">
              <h1 class="text-4xl font-bold text-gray-900 mb-4">
                <%= home.houseName %>
              </h1>
              <div class="flex items-center gap-4 mb-6">
                <div class="flex items-center">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    class="w-5 h-5 text-yellow-400 mr-1"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <span class="text-gray-700 font-semibold"
                    ><%= home.rating %></span
                  >
                </div>
                <span class="text-gray-400">â€¢</span>
                <div class="flex items-center">
                  <i class="fas fa-map-marker-alt text-gray-500 mr-2"></i>
                  <span class="text-gray-700"><%= home.location %></span>
                </div>
              </div>

              <!-- Property Details -->
              <div class="grid grid-cols-2 md:grid-cols-3 gap-6 mb-8">
                <div class="flex items-center gap-2">
                  <i class="fas fa-bed text-gray-400"></i>
                  <span class="text-gray-600">3 Bedrooms</span>
                </div>
                <div class="flex items-center gap-2">
                  <i class="fas fa-bath text-gray-400"></i>
                  <span class="text-gray-600">2 Bathrooms</span>
                </div>
                <div class="flex items-center gap-2">
                  <i class="fas fa-vector-square text-gray-400"></i>
                  <span class="text-gray-600">1,200 sq ft</span>
                </div>
              </div>

              <!-- Description -->
              <div class="mb-8">
                <h2 class="text-2xl font-semibold mb-4">About this place</h2>
                <p class="text-gray-600 leading-relaxed">
                  This beautiful home features modern amenities and stunning
                  views. Perfect for both short and long-term stays, offering
                  comfort and luxury in a prime location. Experience the perfect
                  blend of style and convenience.
                </p>
              </div>
            </div>

            <!-- Right Column - Booking Card -->
            <div class="lg:w-96">
              <div
                class="bg-gray-50 p-6 rounded-xl shadow-sm border border-gray-100"
              >
                <div class="flex justify-between items-center mb-6">
                  <div>
                    <span class="text-3xl font-bold text-gray-900"
                      >$<%= home.price %></span
                    >
                    <span class="text-gray-500">/night</span>
                  </div>
                  <div class="flex items-center">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="w-5 h-5 text-yellow-400 mr-1"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <span class="font-semibold"><%= home.rating %></span>
                  </div>
                </div>

                <!-- Booking Form -->
                <div class="space-y-4">
                  <div class="grid grid-cols-2 gap-4">
                    <div class="relative">
                      <label
                        class="block text-sm font-medium text-gray-700 mb-1"
                        >Check-in</label
                      >
                      <input
                        type="date"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500"
                      />
                    </div>
                    <div class="relative">
                      <label
                        class="block text-sm font-medium text-gray-700 mb-1"
                        >Check-out</label
                      >
                      <input
                        type="date"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500"
                      />
                    </div>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1"
                      >Guests</label
                    >
                    <select
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500"
                    >
                      <option>1 guest</option>
                      <option>2 guests</option>
                      <option>3 guests</option>
                      <option>4 guests</option>
                    </select>
                  </div>
                  <button
                    class="w-full bg-pink-600 hover:bg-pink-700 text-white font-semibold py-3 px-4 rounded-lg transition duration-300"
                  >
                    Reserve Now
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
