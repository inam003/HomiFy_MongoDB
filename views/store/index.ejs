<%- include('../partials/head.ejs') %>
<body class="bg-gray-50 min-h-screen">
  <%- include('../partials/navigation.ejs') %>
  <div class="container mx-auto px-4 py-16">
    <div class="text-center">
      <h1 class="text-5xl font-bold text-pink-600 mb-8">
        Welcome to Airbnb Index Page
      </h1>

      <% if (registeredHomes && registeredHomes.length > 0) { %>
      <p class="text-xl text-gray-600 mb-12">Registered Homes</p>
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-7xl mx-auto mb-8"
      >
        <% registeredHomes.forEach(home => { %>
        <div
          class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition duration-300"
        >
          <img
            src="<%= home.photo %>"
            alt="<%= home.houseName %>"
            class="h-48 w-full object-cover"
          />
          <div class="p-6 text-left">
            <h2 class="text-xl font-semibold text-gray-800 mb-2">
              <%= home.houseName %>
            </h2>
            <p class="text-gray-600 mb-2">
              <i class="fas fa-map-marker-alt mr-2"></i><%= home.location %>
            </p>
            <div class="flex justify-between items-center space-y-2 mt-4">
              <p class="text-pink-600 font-bold">$<%= home.price %>/night</p>
              <div class="flex items-center">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="w-5 h-5 text-yellow-400 mr-1"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
                    clip-rule="evenodd"
                  />
                </svg>
                <span class="text-gray-700"><%= home.rating %></span>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <div class="max-w-2xl mx-auto py-12 px-4">
        <div class="bg-white rounded-xl shadow-lg p-8 text-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-24 w-24 mx-auto text-gray-400 mb-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
            />
          </svg>
          <h2 class="text-2xl font-semibold text-gray-800 mb-4">
            No Homes Available Yet
          </h2>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</body>
