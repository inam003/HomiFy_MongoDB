<header class="bg-pink-600 text-white p-4 shadow-md">
  <nav class="container mx-auto flex justify-between items-center">
    <ul class="flex space-x-4">
      <li>
        <a
          href="/"
          class="<%= currentPage === 'index' ? 'bg-pink-400' : 'hover:bg-pink-400' %> py-2 px-4 rounded transition duration-300"
          >airbnb</a
        >
      </li>
      <% if (isLoggedIn) { %> <% if (user && user.userType === 'guest') { %>
      <li>
        <a
          href="/homes"
          class="<%= currentPage === 'homes' ? 'bg-pink-400' : 'hover:bg-pink-400' %> py-2 px-4 rounded transition duration-300"
          >Home-List</a
        >
      </li>
      <li>
        <a
          href="/bookings"
          class="<%= currentPage === 'bookings' ? 'bg-pink-400' : 'hover:bg-pink-400' %> py-2 px-4 rounded transition duration-300"
          >Bookings</a
        >
      </li>
      <li>
        <a
          href="/favourites"
          class="<%= currentPage === 'favourites' ? 'bg-pink-400' : 'hover:bg-pink-400' %> py-2 px-4 rounded transition duration-300"
          >Favourites</a
        >
      </li>
      <% } else { %>

      <li>
        <a
          href="/host/host-home-list"
          class="<%= currentPage === 'host-homes' ? 'bg-pink-400' : 'hover:bg-pink-400' %> py-2 px-4 rounded transition duration-300"
          >Host Homes</a
        >
      </li>
      <li>
        <a
          href="/host/add-home"
          class="<%= currentPage === 'add-home' ? 'bg-pink-400' : 'hover:bg-pink-400' %> py-2 px-4 rounded transition duration-300"
          >Add Home</a
        >
      </li>
      <% } %> <% } %> <% if (!isLoggedIn) { %>
      <li>
        <a
          href="/signup"
          class="<%= currentPage === 'signup' ? 'bg-pink-400' : 'hover:bg-pink-400' %> py-2 px-4 rounded transition duration-300"
          >SignUp</a
        >
      </li>
      <li>
        <a
          href="/login"
          class="<%= currentPage === 'login' ? 'bg-pink-400' : 'hover:bg-pink-400' %> py-2 px-4 rounded transition duration-300"
          >Login</a
        >
      </li>
      <% } else { %>
      <!-- <li> -->
      <form action="/logout" method="POST">
        <button
          type="submit"
          class="px-4 cursor-pointer rounded transition duration-300"
        >
          Logout
        </button>
      </form>
      <!-- </li> -->
      <% } %>
    </ul>
  </nav>
</header>
